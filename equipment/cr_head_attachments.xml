<Equipment>
	<Bind eqp="SantaHat" to="Civilian Resistance"/>

	<Bind eqp="CR_CapBaseball">
		<to name="Civilian Resistance"/>
	</Bind>
	<Helmet name="CR_CapBaseball" inventoryBinding="Helmet" unlockCost="0"
			tooltip="@helmet_cr_basiccap_name"
			description="@helmet_cr_basiccap_desc"
			img="data/models/humans/attachments/cia_cap_ui.dds"
		>
		<MobilityModifiers moveSpeedModifierPercent="3" turnSpeedModifierPercent="0"/>
		<ConcealmentModifier add="-1" />
		<RenderObject3D model="data/models/humans/attachments/cia_cap.khm" diffuseTex="data/models/humans/attachments/cia_cap_01.dds" attachSlot="Bip001 Head"/>

		<Params protectionInfoText="@equipment_protect2" allowNVG="false">
			<ProtectionArc degrees="360" coveragePercent="0" piercingProtectionLevel="0"/>
		</Params>
	</Helmet>

	<Bind eqp="CR_CapVeteran">
		<to name="CRVeteran"/>
	</Bind>
	<Helmet name="CR_CapVeteran" inventoryBinding="Helmet" unlockCost="0"
			tooltip="@helmet_cr_vetcap_name"
			description="@helmet_cr_vetcap_desc"
			img="data/models/humans/attachments/cr_cap_usa_ui.dds"
		>
		<MobilityModifiers moveSpeedModifierPercent="3" turnSpeedModifierPercent="0"/>
		<ConcealmentModifier add="-2" />
		<RenderObject3D model="data/models/humans/attachments/cia_cap.khm" diffuseTex="data/models/humans/attachments/cr_cap_usa.dds" attachSlot="Bip001 Head"/>

		<Params protectionInfoText="@equipment_protect2" allowNVG="false">
			<ProtectionArc degrees="360" coveragePercent="0" piercingProtectionLevel="0"/>
		</Params>
	</Helmet>

	<Bind eqp="CR_CapCovert">
		<to name="CRVeteran"/>
		<to name="CRCovert"/>
	</Bind>
	<Helmet name="CR_CapCovert" inventoryBinding="Helmet" unlockCost="0"
			tooltip="@helmet_CIA_localhat_name"
			description="@helmet_CIA_localhat_desc"
			img="data/models/humans/attachments/cia_beret_ui.dds"
		>
		<MobilityModifiers moveSpeedModifierPercent="0" turnSpeedModifierPercent="0"/>
		<ConcealmentModifier add="1" />
		<RenderObject3D model="data/models/humans/attachments/cia_beret.khm" diffuseTex="data/models/humans/attachments/cia_scarf_beret_01.dds" attachSlot="Bip001 Head"/>

		<Params protectionInfoText="@equipment_protect2" allowNVG="false">
			<ProtectionArc degrees="360" coveragePercent="0" piercingProtectionLevel="0"/>
		</Params>
	</Helmet>

	<Bind eqp="CR_CapHeadband">
		<to name="CRVeteran"/>
		<to name="CRMG"/>
		<to name="CREngineer"/>
		<to name="CRFighter"/>
	</Bind>
	<Helmet name="CR_CapHeadband" inventoryBinding="Helmet" unlockCost="0"
			tooltip="@helmet_cr_headband_name"
			description="@helmet_cr_headband_desc"
			img="data/models/humans/attachments/cr_headband_ui.dds"
		>
		<MobilityModifiers moveSpeedModifierPercent="0" turnSpeedModifierPercent="0"/>
		<ConcealmentModifier add="-3" />
		<RenderObject3D model="data/models/humans/attachments/swat_militia_hair.khm" diffuseTex="data/models/humans/attachments/swat_militia_hair.dds" attachSlot="Bip001 Head"/>

		<Params protectionInfoText="@equipment_protect2" allowNVG="false">
			<ProtectionArc degrees="360" coveragePercent="0" piercingProtectionLevel="0"/>
		</Params>
	</Helmet>

	<Bind eqp="CR_HelmetPASGT">
		<to name="CRVeteran"/>
		<to name="CRMG"/>
		<to name="CREngineer"/>
	</Bind>
	<Helmet name="CR_HelmetPASGT" inventoryBinding="Helmet" unlockCost="6"
			tooltip="@helmet_cr_pasgt_name"
			description="@helmet_cr_pasgt_desc"
			img="data/models/humans/attachments/cr_pasgt_helmet_ui.dds"
		>
		<MobilityModifiers moveSpeedModifierPercent="-2" turnSpeedModifierPercent="-2"/>
		<ConcealmentModifier add="-3" />
		<RenderObject3D model="data/models/humans/attachments/cr_pasgt_helmet.khm" diffuseTex="data/models/humans/attachments/cr_pasgt_helmet.dds" attachSlot="Bip001 Head">
		<!-- <RenderObject3D model="data/models/humans/attachments/cr_pasgt_helmet.khm" diffuseTex="data/models/humans/attachments/cr_pasgt_helmet.dds" attachSlot="Bip001 Head"> -->
			<Specular shininess="4" intensity="1.3"/>
		</RenderObject3D>

		<Params protectionInfoText="@equipment_protect2" allowNVG="false">
			<ProtectionArc degrees="360" coveragePercent="20" piercingProtectionLevel="3"/>
		</Params>
	</Helmet>

	<Bind eqp="CR_HelmetFASTRF">
		<to name="CRVeteran"/>
	</Bind>
	<Helmet name="CR_HelmetFASTRF" inventoryBinding="Helmet" unlockCost="9"
			tooltip="@helmet_cr_fastrf_name"
			description="@helmet_cr_fastrf_desc"
			img="data/models/humans/attachments/ranger_helmet_ui.dds"
		>
		<MobilityModifiers moveSpeedModifierPercent="-1" turnSpeedModifierPercent="-3"/>
		<ConcealmentModifier add="-3" />
		<RenderObject3D model="data/models/humans/attachments/ranger_assaulter_helmet.khm" diffuseTex="data/models/humans/attachments/ranger_assaulter_helmet.dds" attachSlot="Bip001 Head"/>

		<Params protectionInfoText="@equipment_protect2" allowNVG="true">
			<ProtectionArc degrees="360" coveragePercent="10" piercingProtectionLevel="5"/>
		</Params>
	</Helmet>

	<Bind eqp="CR_NVG">
		<to name="CRVeteran"/>
	</Bind>
	<HelmetNVG name="CR_NVG" inventoryBinding="HelmetNVG" unlockCost="2"
			tooltip="@nvg_rangers_pvs14_name"
			description="@nvg_rangers_pvs14_desc"
			img="data/models/humans/attachments/nvg_01_ui.dds"
		>
		<MobilityModifiers moveSpeedModifierPercent="-3" turnSpeedModifierPercent="-2"/>
		<ConcealmentModifier add="-3" />

		<!-- fov params overwrite the base ones -->
		<ModifiableParams
			fovDegrees="50"
			fovRadiusMeters="0.42"
			fovRangeMeters="999"
		/>

		<!-- this is shown for daylight missions -->
		<RenderObject3D model="data/models/humans/attachments/nvg_01_up.khm" diffuseTex="data/models/humans/attachments/nvg_01.dds" attachSlot="nvg">
			<Specular shininess="8" intensity="1.3"/>
		</RenderObject3D>

		<!-- this is shown in night missions -->
		<RenderObject3D model="data/models/humans/attachments/nvg_01.khm" diffuseTex="data/models/humans/attachments/nvg_01.dds" attachSlot="nvg">
			<Specular shininess="8" intensity="1.3"/>
		</RenderObject3D>
		<RenderObject3D model="data/models/humans/attachments/nvg_01_lights.khm" diffuseTex="data/textures/fx/light_flare_01.dds" diffuseColor="84ff47" blendMode="add" attachSlot="nvg">
		</RenderObject3D>
	</HelmetNVG>
</Equipment>