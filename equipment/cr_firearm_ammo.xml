			<Damage start="30" end="20" startDist="0" endDist="100"/>
			<CriticalChancePercent start="28" end="0" startDist="0" endDist="75"/>
			<ArmorPenetration start="5.5" end="3" startDist="10" endDist="50"/>
		</Params>
	</Ammo>
</Equipment>