<Equipment>

<!-- ARMOR -->

	<Bind eqp="CR Civilian Soft Armor">
		<to name="CRCovert"/>
		<to name="CRMG"/>
		<to name="CREngineer"/>
		<to name="CRFighter"/>
	</Bind>
	<Armor name="CR Civilian Soft Armor" inventoryBinding="Armor" unlockCost="1"
			tooltip="@armor_cr_civiliansoft_name"
			description="@armor_cr_civiliansoft_desc"
			img="data/models/equipment/cr_armor_softcivilian_ui.dds"
		>
		<MobilityModifiers moveSpeedModifierPercent="-1" turnSpeedModifierPercent="0"/>
		<ConcealmentModifier add="-1"/>

		<Params protectionInfoText="@equipment_protect1">
			<ProtectionArc degrees="90" coveragePercent="40" piercingProtectionLevel="2"/>
			<ProtectionArc degrees="270" coveragePercent="0" piercingProtectionLevel="0"/>
			<ProtectionArc degrees="360" coveragePercent="20" piercingProtectionLevel="2"/>
		</Params>
	</Armor>

	<Bind eqp="CR Civilian LVL2">
		<to name="CRVeteran"/>
		<to name="CRMG"/>
		<to name="CRCovert"/>
		<to name="CREngineer"/>
	</Bind>
	<Armor name="CR Civilian LVL2" inventoryBinding="Armor" unlockCost="3"
			tooltip="@armor_cr_civilianII_name"
			description="@armor_cr_civilianII_desc"
			img="data/models/equipment/armor_softlevelii_ui.dds"
		>
		<MobilityModifiers moveSpeedModifierPercent="-1" turnSpeedModifierPercent="0"/>
		<ConcealmentModifier add="-1"/>

		<Params protectionInfoText="@equipment_protect1">
			<ProtectionArc degrees="90" coveragePercent="40" piercingProtectionLevel="3"/>
			<ProtectionArc degrees="270" coveragePercent="15" piercingProtectionLevel="3"/>
			<ProtectionArc degrees="360" coveragePercent="30" piercingProtectionLevel="3"/>
		</Params>
	</Armor>

	<Bind eqp="CR Civilian LVL3A">
		<to name="CRVeteran"/>
		<to name="CRMG"/>
		<to name="CRCovert"/>
		<to name="CREngineer"/>
	</Bind>
	<Armor name="CR Civilian LVL3A" inventoryBinding="Armor" unlockCost="6"
			tooltip="@armor_cr_civilianIIIA_name"
			description="@armor_cr_civilianIIIA_desc"
			img="data/models/equipment/armor_softpanelsiiia_ui.dds"
		>
		<MobilityModifiers moveSpeedModifierPercent="-1" turnSpeedModifierPercent="0"/>
		<ConcealmentModifier add="-2"/>

		<Params protectionInfoText="@equipment_protect1">
			<ProtectionArc degrees="90" coveragePercent="40" piercingProtectionLevel="5"/>
			<ProtectionArc degrees="270" coveragePercent="30" piercingProtectionLevel="4"/>
			<ProtectionArc degrees="360" coveragePercent="40" piercingProtectionLevel="5"/>
		</Params>
	</Armor>

	<Bind eqp="CR Vest Extended">
		<to name="CRVeteran"/>
		<to name="CREngineer"/>
	</Bind>
	<Armor name="CR Vest Extended" inventoryBinding="Armor" unlockCost="10"
			tooltip="@armor_cr_extended_name"
			description="@armor_cr_extended_desc"
			img="data/models/equipment/armor_leveliv_ui.dds"
		>
		<MobilityModifiers moveSpeedModifierPercent="-11" turnSpeedModifierPercent="-2"/>
		<ConcealmentModifier add="-3" />

		<Params protectionInfoText="@equipment_protect2">
			<ProtectionArc degrees="90" coveragePercent="40" piercingProtectionLevel="6"/>
			<ProtectionArc degrees="270" coveragePercent="5" piercingProtectionLevel="1"/>
			<ProtectionArc degrees="360" coveragePercent="37" piercingProtectionLevel="5"/>
		</Params>
	</Armor>

<!-- SHIELD -->

	<Bind eqp="CR Shield Lvl III">
		<to name="CRVeteran"/>
		<to name="CREngineer"/>
	</Bind>
	<Shield name="CR Shield Lvl III" inventoryBinding="PrimaryWeapon" unlockCost="12"
			tooltip="@shield_cr_lvl3_name"
			description="@shield_cr_lvl3_desc"
			img="data/models/equipment/shield_01_ui.dds"
			holdBone="shield"
			animationSet="shield"
		>
		<MobilityModifiers moveSpeedModifierPercent="-22" turnSpeedModifierPercent="-60"/>
		<ConcealmentModifier add="-10"/>
		<RenderObject3D model="data/models/equipment/shield_01.khm" diffuseTex="data/models/equipment/shield_01.dds" attachSlot="prop_back_rifle"/>

		<ModifiableParams
			fovDegrees="75"
			fovRangeMeters="999999"
			fovRadiusMeters="0.4"
			suppressionRecoveryAdd="20"
		/>

		<Params protectionInfoText="@equipment_protect1">
			<ProtectionArc degrees="90" coveragePercent="90" piercingProtectionLevel="5"/>

			<FX
				particles="Hit_Metal_Shield"
			/>

			<EquipmentModifier>
				<AddTo
					reloadTime="+2000"
					reloadEmptyTime="+2000"
					readyTime="+100"
					guardTime="+100"
					changeInTime="+300"
					changeOutTime="+300"

					accuracyStart="-40"
					accuracyEnd="-70"
				/>
			</EquipmentModifier>
		</Params>
	</Shield>
</Equipment>